{
    "name": "excalidraw-editor",
    "icon": "logo.png",
    "displayName": "Excalidraw Schema Editor",
    "description": "Draw schemas in VSCode using Excalidraw (Unofficial)",
    "version": "2.0.0",
    "publisher": "pomdtr",
    "engines": {
        "vscode": "^1.56.0"
    },
    "categories": [
        "Visualization"
    ],
    "keywords": [
        "draw",
        "schemas",
        "graphics",
        "paint"
    ],
    "author": {
        "name": "pomdtr",
        "email": "achille.lacoin@gmail.com",
        "url": "https://github.com/pomdtr"
    },
    "activationEvents": [
        "onCustomEditor:editor.excalidraw"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/pomdtr/vscode-excalidraw-embed"
    },
    "main": "./out/extension.js",
    "contributes": {
        "configuration": [
            {
                "title": "Excalidraw",
                "properties": {
                    "excalidraw.autoSave": {
                        "type": "boolean",
                        "description": "Controls autoSave of excalidraw editors.",
                        "default": false
                    }
                }
            }
        ],
        "customEditors": [
            {
                "viewType": "editor.excalidraw",
                "displayName": "Excalidraw Editor",
                "selector": [
                    {
                        "filenamePattern": "*.excalidraw"
                    },
                    {
                        "filenamePattern": "*.excalidraw.svg"
                    }
                ]
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run build",
        "build": "npm run build-excalidraw && npm run build-extension",
        "build-extension": "tsc",
        "build-excalidraw": "rm -rf media && cd ./excalidraw && npm run build && mv build ../media"
    },
    "capabilities": {
        "untrustedWorkspaces": {
            "supported": true
        }
    },
    "devDependencies": {
        "@types/minimatch": "^3.0.4",
        "@types/node": "^15.3.0",
        "@types/vscode": "^1.56.0",
        "@typescript-eslint/eslint-plugin": "^4.23.0",
        "@typescript-eslint/parser": "^4.23.0",
        "eslint": "^7.26.0",
        "typescript": "^4.2.4"
    }
}
