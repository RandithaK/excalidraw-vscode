{
    "name": "excalidraw-editor",
    "icon": "logo.png",
    "displayName": "Excalidraw Schema Editor",
    "description": "Draw schemas in VSCode using Excalidraw (Unofficial)",
    "version": "1.3.0",
    "publisher": "pomdtr",
    "engines": {
        "vscode": "^1.56.0"
    },
    "categories": [
        "Visualization"
    ],
    "keywords": [
        "draw",
        "schemas",
        "graphics",
        "paint"
    ],
    "author": {
        "name": "pomdtr",
        "email": "achille.lacoin@gmail.com",
        "url": "https://github.com/pomdtr"
    },
    "activationEvents": [
        "onCustomEditor:editor.excalidraw"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/pomdtr/vscode-excalidraw-embed"
    },
    "main": "./out/src/extension.js",
    "contributes": {
        "configuration": [
            {
                "title": "Excalidraw",
                "properties": {
                    "excalidraw.export.exportBackground": {
                        "type": "boolean",
                        "description": "Indicates whether background should be exported",
                        "default": true
                    },
                    "excalidraw.export.exportEmbedScene": {
                        "type": "boolean",
                        "description": "Indicates whether scene data should be embedded in svg. This will increase the svg size.",
                        "default": false
                    },
                    "excalidraw.export.exportWithDarkMode": {
                        "type": "boolean",
                        "description": "Indicates whether to export with dark mode",
                        "default": false
                    },
                    "excalidraw.autoSave": {
                        "type": "boolean",
                        "description": "Controls autoSave of excalidraw editors.",
                        "default": false
                    },
                    "excalidraw.theme": {
                        "description": "The theme to use for the Excalidraw editor.",
                        "type": "string",
                        "default": "light",
                        "enum": [
                            "dark",
                            "light",
                            "auto"
                        ],
                        "enumDescriptions": [
                            "Always use dark theme",
                            "Always use light theme",
                            "Sync theme with vscode"
                        ]
                    }
                }
            }
        ],
        "commands": [
            {
                "command": "excalidraw.selectTheme",
                "title": "Excalidraw: Color Theme"
            },
            {
                "command": "excalidraw.openInApp",
                "title": "Excalidraw: Open in Application"
            },
            {
                "command": "excalidraw.exportConfig",
                "title": "Excalidraw: Export Config"
            },
            {
                "command": "excalidraw.exportSvg",
                "title": "Excalidraw: Export to Svg"
            },
            {
                "command": "excalidraw.exportPng",
                "title": "Excalidraw: Export to Png"
            }
        ],
        "customEditors": [
            {
                "viewType": "editor.excalidraw",
                "displayName": "Excalidraw Editor",
                "priority": "default",
                "selector": [
                    {
                        "filenamePattern": "*.excalidraw"
                    },
                    {
                        "filenamePattern": "*.excalidraw.svg"
                    }
                ]
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "npm-run-all compile:*",
        "compile:extension": "tsc",
        "compile:excalidraw": "cd ./excalidraw && npm run build"
    },
    "capabilities": {
        "untrustedWorkspaces": {
            "supported": true
        }
    },
    "devDependencies": {
        "@types/minimatch": "^3.0.4",
        "@types/node": "^15.3.0",
        "@types/vscode": "^1.56.0",
        "@typescript-eslint/eslint-plugin": "^4.23.0",
        "@typescript-eslint/parser": "^4.23.0",
        "eslint": "^7.26.0",
        "npm-run-all": "^4.1.5",
        "typescript": "^4.2.4"
    },
    "dependencies": {
        "open": "^8.2.1"
    }
}
