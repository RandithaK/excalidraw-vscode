{
    "name": "excalidraw-editor",
    "icon": "assets/logo.png",
    "displayName": "Excalidraw",
    "description": "Draw schemas in VSCode using Excalidraw",
    "version": "2.1.5",
    "publisher": "pomdtr",
    "engines": {
        "vscode": "^1.63.0"
    },
    "categories": [
        "Visualization"
    ],
    "keywords": [
        "draw",
        "schemas",
        "graphics",
        "paint"
    ],
    "author": {
        "name": "pomdtr",
        "email": "achille.lacoin@gmail.com",
        "url": "https://github.com/pomdtr"
    },
    "activationEvents": [
        "onCustomEditor:editor.excalidraw",
        "onCommand:excalidraw.theme.update"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/excalidraw/excalidraw-vscode"
    },
    "browser": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "excalidraw.theme.update",
                "title": "Excalidraw: Color Theme",
                "icon": "$(color-mode)",
                "category": "Excalidraw"
            }
        ],
        "configuration": [
            {
                "title": "Excalidraw",
                "properties": {
                    "excalidraw.autoSave": {
                        "type": "boolean",
                        "description": "Controls autoSave of excalidraw editors.",
                        "default": false,
                        "deprecationMessage": "This setting is deprecated and will be removed in a future release. Please use the setting \"files.autoSave\" instead."
                    },
                    "excalidraw.syncTheme": {
                        "scope": "resource",
                        "description": "Sync Excalidraw theme with VSCode color theme.",
                        "type": "boolean",
                        "default": false,
                        "deprecationMessage": "This setting is deprecated and will be removed in a future release. Please use the setting \"excalidraw.theme\" instead."
                    },
                    "excalidraw.theme": {
                        "scope": "resource",
                        "description": "Excalidraw theme. Use auto to sync theme with VSCode color theme.",
                        "type": "string",
                        "default": "light",
                        "enum": [
                            "auto",
                            "light",
                            "dark"
                        ]
                    },
                    "excalidraw.workspaceLibraryPath": {
                        "scope": "resource",
                        "description": "Path to the file used to store the excalidraw library (relative to workspace root). If not set, the library will be persisted in the user storage.",
                        "type": "string"
                    }
                }
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "excalidraw.theme.update",
                    "group": "navigation",
                    "when": "resourceFilename =~ /^.+\\.excalidraw$/ || resourceFilename =~ /^.+\\.excalidraw\\.svg$/ || resourceFilename =~ /^.+\\.excalidraw\\.png$/"
                }
            ]
        },
        "customEditors": [
            {
                "viewType": "editor.excalidraw",
                "displayName": "Excalidraw",
                "priority": "default",
                "selector": [
                    {
                        "filenamePattern": "*.excalidraw"
                    },
                    {
                        "filenamePattern": "*.excalidraw.svg"
                    },
                    {
                        "filenamePattern": "*.excalidraw.png"
                    }
                ]
            }
        ]
    },
    "scripts": {
        "install": "cd ../webview && npm install",
        "vscode:prepublish": "npm run package",
        "package": "npm run build-webview && gulp && webpack --mode production --devtool hidden-source-map",
        "build": "npm run build-webview && gulp && webpack --mode development",
        "lint": "eslint --ext .ts src",
        "build-webview": "cd ../webview && npm run build",
        "start-webview": "cd ../webview && npm run start",
        "open-in-browser": "vscode-test-web --extensionDevelopmentPath=. ."
    },
    "capabilities": {
        "untrustedWorkspaces": {
            "supported": true
        }
    },
    "devDependencies": {
        "@excalidraw/eslint-config": "^1.0.3",
        "@types/minimatch": "^3.0.4",
        "@types/node": "^15.3.0",
        "@types/vscode": "^1.63.0",
        "@typescript-eslint/eslint-plugin": "^5.19.0",
        "@typescript-eslint/parser": "^5.19.0",
        "@vscode/test-web": "*",
        "eslint": "^8.13.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.0.0",
        "gulp": "^4.0.2",
        "gulp-inline-source": "^4.0.0",
        "gulp-replace": "^1.1.3",
        "prettier": "^2.6.2",
        "ts-loader": "^9.2.8",
        "typescript": "^4.2.4",
        "webpack": "^5.70.0",
        "webpack-cli": "^4.9.2"
    },
    "dependencies": {
        "js-base64": "^3.7.2",
        "path-browserify": "^1.0.1"
    }
}
