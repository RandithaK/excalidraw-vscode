{
    "name": "excalidraw-editor",
    "icon": "assets/logo.png",
    "displayName": "Excalidraw",
    "description": "Draw schemas in VSCode using Excalidraw",
    "version": "2.1.9",
    "publisher": "pomdtr",
    "engines": {
        "vscode": "^1.63.0"
    },
    "categories": [
        "Visualization"
    ],
    "keywords": [
        "draw",
        "schemas",
        "graphics",
        "paint"
    ],
    "author": {
        "name": "pomdtr",
        "email": "achille.lacoin@gmail.com",
        "url": "https://github.com/pomdtr"
    },
    "activationEvents": [
        "workspaceContains:**/*.{excalidraw,excalidraw.svg}",
        "onCustomEditor:editor.excalidraw"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/excalidraw/excalidraw-vscode"
    },
    "browser": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "excalidraw.updateTheme",
                "title": "Choose Excalidraw Theme",
                "icon": "$(color-mode)"
            },
            {
                "command": "excalidraw.toggleTheme",
                "title": "Toggle Excalidraw Theme",
                "icon": "$(color-mode)"
            },
            {
                "command": "excalidraw.showSource",
                "title": "Show Source",
                "icon": "$(go-to-file)"
            },
            {
                "command": "excalidraw.showEditor",
                "title": "Open in Excalidraw",
                "icon": {
                    "dark": "./assets/menu-icon-dark.png",
                    "light": "./assets/menu-icon-light.png"
                }
            },
            {
                "command": "excalidraw.showImage",
                "title": "Show Image",
                "icon": "$(go-to-file)"
            },
            {
                "command": "excalidraw.showSourceToSide",
                "title": "Show Source to the Side",
                "icon": "$(go-to-file)"
            },
            {
                "command": "excalidraw.showEditorToSide",
                "title": "Open in Excalidraw to the Side",
                "icon": "./assets/logo.png"
            },
            {
                "command": "excalidraw.showImageToSide",
                "title": "Show Image to the Side",
                "icon": "$(go-to-file)"
            }
        ],
        "configuration": [
            {
                "title": "Excalidraw",
                "properties": {
                    "excalidraw.theme": {
                        "scope": "resource",
                        "description": "Excalidraw theme. Use auto to sync theme with VSCode color theme.",
                        "type": "string",
                        "default": "light",
                        "enum": [
                            "auto",
                            "light",
                            "dark"
                        ]
                    },
                    "excalidraw.workspaceLibraryPath": {
                        "scope": "resource",
                        "description": "Path to the file used to store the excalidraw library (relative to workspace root). If not set, the library will be persisted in the user storage.",
                        "type": "string"
                    }
                }
            }
        ],
        "configurationDefaults": {
            "files.associations": {
                "*.excalidraw": "json",
                "*.excalidrawlib": "json"
            }
        },
        "menus": {
            "commandPalette": [
                {
                    "command": "excalidraw.updateTheme",
                    "when": "activeCustomEditorId == 'editor.excalidraw'"
                },
                {
                    "command": "excalidraw.toggleTheme",
                    "when": "false"
                },
                {
                    "command": "excalidraw.showSource",
                    "when": "false"
                },
                {
                    "command": "excalidraw.showEditor",
                    "when": "false"
                },
                {
                    "command": "excalidraw.showImage",
                    "when": "false"
                },
                {
                    "command": "excalidraw.showSourceToSide",
                    "when": "false"
                },
                {
                    "command": "excalidraw.showEditorToSide",
                    "when": "false"
                },
                {
                    "command": "excalidraw.showImageToSide",
                    "when": "false"
                }
            ],
            "editor/title": [
                {
                    "command": "excalidraw.showEditor",
                    "alt": "excalidraw.showEditorToSide",
                    "when": "activeCustomEditorId != 'editor.excalidraw' && resourceFilename =~ /^.+\\.excalidraw(.png)?$/",
                    "group": "navigation"
                },
                {
                    "command": "excalidraw.showSource",
                    "alt": "excalidraw.showSourceToSide",
                    "group": "navigation",
                    "when": "activeCustomEditorId == 'editor.excalidraw' && resourceFilename =~ /^.+\\.excalidraw(.svg)?$/"
                },
                {
                    "command": "excalidraw.showImage",
                    "alt": "excalidraw.showImageToSide",
                    "when": "activeCustomEditorId == 'editor.excalidraw' && resourceFilename =~ /^.+\\.excalidraw.png$/",
                    "group": "navigation"
                },
                {
                    "command": "excalidraw.toggleTheme",
                    "alt": "excalidraw.updateTheme",
                    "when": "activeCustomEditorId == 'editor.excalidraw' && resourceFilename =~ /^.+\\.excalidraw(.svg|.png)?$/",
                    "group": "navigation"
                }
            ]
        },
        "customEditors": [
            {
                "viewType": "editor.excalidraw",
                "displayName": "Excalidraw",
                "priority": "default",
                "selector": [
                    {
                        "filenamePattern": "*.excalidraw"
                    },
                    {
                        "filenamePattern": "*.excalidraw.svg"
                    },
                    {
                        "filenamePattern": "*.excalidraw.png"
                    }
                ]
            }
        ]
    },
    "scripts": {
        "install": "cd ../webview && npm install",
        "vscode:prepublish": "npm run package",
        "package": "npm run build-webview && gulp && webpack --mode production --devtool hidden-source-map",
        "build": "npm run build-webview && gulp && webpack --mode development",
        "lint": "eslint --ext .ts src",
        "build-webview": "cd ../webview && npm run build",
        "start-webview": "cd ../webview && npm run start",
        "open-in-browser": "vscode-test-web --extensionDevelopmentPath=. ../examples"
    },
    "capabilities": {
        "untrustedWorkspaces": {
            "supported": true
        }
    },
    "devDependencies": {
        "@excalidraw/eslint-config": "^1.0.3",
        "@types/minimatch": "^3.0.4",
        "@types/node": "^15.3.0",
        "@types/vscode": "^1.63.0",
        "@typescript-eslint/eslint-plugin": "^5.19.0",
        "@typescript-eslint/parser": "^5.19.0",
        "@vscode/test-web": "*",
        "eslint": "^8.13.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.0.0",
        "gulp": "^4.0.2",
        "gulp-inline-source": "^4.0.0",
        "gulp-replace": "^1.1.3",
        "prettier": "^2.6.2",
        "ts-loader": "^9.2.8",
        "typescript": "^4.2.4",
        "webpack": "^5.70.0",
        "webpack-cli": "^4.9.2"
    },
    "dependencies": {
        "js-base64": "^3.7.2",
        "path-browserify": "^1.0.1"
    }
}
